<form class="needs-validation" action="/records" method="POST" novalidate>
	<div class="mb-3">
		<label class="form-label" for="employeeID">Nhân viên</label>
		<select class="form-select" id="employeeID" name="employeeID">
			<% for( let i = 0; i < employees.length; i++ ) { %>
			<% const e = employees[i].dataValues %>
			<option <%= employeeID === e.id ? 'selected' : '' %> value="<%=e.id%>"><%=e.name%></option>
			<% } %>
		</select>
	</div>
	<div class="mb-3">
		<label class="form-label" for="date">Ngày</label>
		<input class="form-control" type="date" id="date" name="date" required value="<%=date%>">
	</div>
	<div class="mb-3 row">
		<div class="col-6 mb-3">
			<label class="form-label" for="time">Thời điểm đến</label>
			<input class="form-control" type="time" id="startTime" name="startTime" required>
		</div>
		<div class="col-6">
			<label class="form-label" for="time">Thời điểm về</label>
			<input class="form-control" type="time" id="endTime" name="endTime" required>
		</div>
		<div class="col-7">
			<label class="form-label" for="status">Trạng thái</label>
			<select class="form-select" name="status" id="status">
				<option value="">Mặc định (Suy ra từ thời điểm đến/về)</option>
				<option value="1">Đủ công</option>
				<option value="2">Đi muộn</option>
				<option value="3">Về sớm</option>
				<option value="4">Cả đi muộn và về sớm</option>
			</select>
		</div>
	</div>
	<div class="mb-3">
		<label for="reason" class="form-label">Giải trình</label>
		<textarea class="form-control" name="reason" id="reason" rows="4"></textarea>
	</div>
	<button class="btn btn-success" type="submit">Chấm công</button>
	<a class="btn btn-secondary" href="<%=returnTo%>">Quay lại</a>
</form>