<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Nhân viên' }); %>

<body>
	<%- include('../partials/navbar'); %>
	<div class="container-fluid">
		<%- include("../partials/flash") %>
		<div class="row">
			<main class="col-12 px-4">
				<div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
					<h1>Danh sách nhân viên</h1>
				</div>
				<div class="table-responsive small">
					<table class="table table-bordered table-hover table-striped">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Tên</th>
								<th scope="col">Email</th>
								<th scope="col">SĐT</th>
								<th scope="col" style="width:100px;"></th>
							</tr>
						</thead>
						<tbody>
							<% for (let i=0; i < employees.length; i++) { %>
							<tr>
								<td>
									<%=i%>
								</td>
								<td>
									<a href="/employees/<%=employees[i].dataValues.id%>">
										<%=employees[i].dataValues.name%>
									</a>
								</td>
								<td>
									<%=employees[i].dataValues.email%>
								</td>
								<td>
									<%=employees[i].dataValues.phone%>
								</td>
								<td class="text-center">
									<form action="/employees/<%=employees[i].dataValues.id%>?_method=DELETE" method="post">
										<div class="btn-group" role="group">
											<a type="button" class="btn btn-success" href="/employees/edit/<%=employees[i].dataValues.id%>">
												<i class="bi bi-pencil-square"></i>
											</a>
											<button type="submit" class="btn btn-danger">
												<i class="bi bi-person-dash"></i>
											</button>
										</div>
									</form>
								</td>
							</tr>
							<% } %>
						</tbody>
					</table>

				</div>
			</main>
		</div>
	</div>
</body>

</html>